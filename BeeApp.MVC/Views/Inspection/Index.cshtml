@model IEnumerable<BeeApp.Domain.Entities.Inspection>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista przegladów</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3 d-flex">
                <div class="card flex-fill">
                    <div class="card-body d-flex flex-column">
                        <div>
                            <h5 class="card-title">Data: @item.CreatedAt.ToString("dd.MM.yyyy")</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Id ula: @item.BeehiveDetails.Id</h6>
                            <h6 class="card-subtitle mb-2 text-muted">Typ ula: @item.BeehiveDetails.BeehiveType</h6>
                        </div>
                        <div class="mt-auto">
                            <a href="#" class="btn btn-primary">Szczegóły</a>
                            <a href="#" class="btn btn-secondary">Edycja</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
