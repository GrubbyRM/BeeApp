<h1>Nowy przegląd</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Inspection/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" for="CreatedAt">Data przeglądu</label>
                <input class="form-control" type="date" id="CreatedAt" name="CreatedAt" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="QueenBee">Matka Pszczela</label>
                <input class="form-check-input" type="checkbox" id="QueenBee" name="QueenBee" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="BeeBrood">Czerw</label>
                <input class="form-check-input" type="checkbox" id="BeeBrood" name="BeeBrood" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Eggs">Jajka</label>
                <input class="form-check-input" type="checkbox" id="Eggs" name="Eggs" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Feed">Pokarm</label>
                <input class="form-check-input" type="checkbox" id="Feed" name="Feed" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="QueenCell">Mateczniki</label>
                <input class="form-check-input" type="checkbox" id="QueenCell" name="QueenCell" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="BeeBread">Pierzga</label>
                <input class="form-check-input" type="checkbox" id="BeeBread" name="BeeBread" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Notes">Notatki</label>
                <input class="form-control" type="text" id="Notes" name="Notes" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="BeehiveId">Numer ula</label>
                <input class="form-control" type="text" id="Id" name="BeehiveDetails.Id" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="BeehiveType">Typ ula</label>
                <input class="form-control" type="text" id="BeehiveType" name="BeehiveDetails.BeehiveType" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="BeehiveQueenType">Rodzaj matki</label>
                <input class="form-control" type="text" id="BeehiveQueenType" name="BeehiveDetails.QueenType" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="LastInspection">Ostatni przegląd</label>
                <input class="form-control" type="datetime" id="BeehiveLastInspection" name="BeehiveDetails.LastInspection" />
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
