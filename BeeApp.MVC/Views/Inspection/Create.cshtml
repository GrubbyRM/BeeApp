@using BeeApp.Aplication.Inspection.Commands.CreateInspection;

@model CreateInspectionCommand
<h1>Nowy przegląd</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Inspection/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="CreatedAt">Data przeglądu</label>
                <input class="form-control" type="date" asp-for="CreatedAt" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="QueenBee">Matka Pszczela</label>
                <input class="form-check-input" type="checkbox" asp-for="QueenBee" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="BeeBrood">Czerw</label>
                <input class="form-check-input" type="checkbox" asp-for="BeeBrood" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Eggs">Jajka</label>
                <input class="form-check-input" type="checkbox" asp-for="Eggs" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Feed">Pokarm</label>
                <input class="form-check-input" type="checkbox" asp-for="Feed" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="QueenCell">Mateczniki</label>
                <input class="form-check-input" type="checkbox" asp-for="QueenCell" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="BeeBread">Pierzga</label>
                <input class="form-check-input" type="checkbox" asp-for="BeeBread" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Notes">Notatki</label>
                <input class="form-control" type="text" asp-for="Notes" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="BeehiveDetails.Id">Numer ula</label>
                <input class="form-control" type="text" asp-for="BeehiveDetails.Id" />
                <span asp-validation-for="BeehiveDetails.Id" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="BeehiveDetails.BeehiveType">Typ ula</label>
                <input class="form-control" type="text" asp-for="BeehiveDetails.BeehiveType" />
                <span asp-validation-for="BeehiveDetails.BeehiveType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="BeehiveDetails.QueenType">Rodzaj matki</label>
                <input class="form-control" type="text" asp-for="BeehiveDetails.QueenType" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="BeehiveDetails.LastInspection">Ostatni przegląd</label>
                <input class="form-control" type="datetime" asp-for="BeehiveDetails.LastInspection" />
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
